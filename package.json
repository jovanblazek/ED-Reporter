{
  "name": "ed-reporter",
  "version": "1.0.0",
  "description": "Discord bot for reporting Galnet news",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "register-commands:dev": "ts-node src/utils/registerCommands.ts dev",
    "register-commands:prod": "ts-node src/utils/registerCommands.ts prod",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "generate-types": "prisma generate",
    "build": "tsc",
    "start": "cd build && node src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jovanblazek/ED-Reporter.git"
  },
  "author": "jovanblazek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jovanblazek/ED-Reporter/issues"
  },
  "homepage": "https://github.com/jovanblazek/ED-Reporter#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.3",
    "@sudolabs-io/eslint-config-sudolabs": "^1.5.66",
    "@types/koa": "^2.15.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.7.6",
    "@types/node-cron": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prisma": "^4.2.1",
    "semantic-release": "^21.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@discordjs/rest": "^1.0.1",
    "@prisma/client": "^4.2.1",
    "deepl-node": "^1.5.0",
    "discord.js": "^14.2.0",
    "dotenv": "^16.0.1",
    "got": "^11.8.5",
    "koa": "^2.15.3",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.2",
    "winston": "^3.8.1"
  },
  "engines": {
    "node": "^18"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "./CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ],
    "preset": "conventionalcommits",
    "presetConfig": {
      "types": [
        {
          "type": "feat",
          "section": ":sparkles: Features",
          "hidden": false
        },
        {
          "type": "fix",
          "section": ":bug: Bug Fixes",
          "hidden": false
        },
        {
          "type": "enh",
          "section": ":up: Enhancements",
          "hidden": false
        },
        {
          "type": "revert",
          "section": ":rewind: Reverts",
          "hidden": false
        },
        {
          "type": "docs",
          "section": ":books: Documentation",
          "hidden": false
        },
        {
          "type": "chore",
          "section": ":octopus: Miscellaneous Chores",
          "hidden": false
        },
        {
          "type": "test",
          "section": ":white_check_mark: Tests",
          "hidden": false
        }
      ]
    }
  }
}
